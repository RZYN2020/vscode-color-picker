{
  "name": "vscode-color-picker",
  "displayName": "Color Picker",
  "description": "Color picker for hex color codes in text",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:css",
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "color-picker.pickColor",
        "title": "Pick Color"
      }
    ],
    "keybindings": [
      {
        "command": "color-picker.pickColor",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Color Picker",
      "properties": {
        "colorPicker.disabledFiles": {
          "type": "array",
          "default": [],
          "description": "List of file patterns where the color picker should be disabled"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.44.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-color-picker": "file:"
  }
}
